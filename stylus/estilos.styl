@import "nib"
@import "normalize.styl"
@import "fonts.styl"

// animacion(parametro)
// 	-webkit-animation parametro
// 	-moz-animation parametro
// 	-ms-animation parametro
// 	-o-animation parametro
// 	animation parametro


gris_oscuro = #333333
gris_claro = #818181
gris_mas_claro = #F0F0F0
black = #000000
rojo = #B0255B
a
	text-decoration none
body
	font-size 16px
	font-family 'Varela Round', sans-serif
figure
	margin 0
img 
	vertical-align top
ul
	margin 0
	padding 0 
.button-menu
	position absolute
	top 50%
	margin-top -8px
	left 0.5em
	color gris_oscuro
.relative
	position relative
.left
	float left
.right
	float right
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black, 0.5)
.container
	padding 1.4375rem
	font-size 0
	text-align center
.border-bottom 
	border-bottom 1px solid gris_claro
.padding
	padding 1em
.padding-tb
	padding 1em 0
.progress 
	margin 1em 0
	position relative
	.min
	.max
		font-size 0.8em
		top -5px
		position absolute
	.min 
		left 0 
	.max 
		right 0
	.total
		height 5px
		background gris_claro
		width 75%
		margin 0 auto
	.state	
		height 5px
		background rojo
		width 30%
		position relative
		animation 180s state infinite linear
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right -2px
		top -2px
		width 10px
		// animation 1s circle infinite linear
@keyframes state
	0%
		width 0
	100%
		width 100%
@keyframes circle
	0%
		transform scale(0)
	100%
		transform scale(1)
.round
	border-radius 50%
	overflow hidden
.action
	color white
	margin-right 0.5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.right-text
	text-align right
.name
	color gris_oscuro
.menu
	display none
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.header
	height 3.5em
	.title
		font-size 1.1875em
		line-height 3.5em
		margin 0
		text-align center
.input 
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin 0.5em 0
.playing
	&.small
		width 20em
		margin 0 auto
.wrap
	width 1000px
.search-icon
	position absolute
	left 0.5em
	top 0.8em
	color gris_claro
.close-icon
	position absolute
	top 0.75em
	color gris_claro
	right 0.5em
	font-size 1.2
.playlist
		display none
		width 22em
		padding 0 2em
		border-left 1px solid gris_claro
		.list
			list-style none
		.item
			padding 1em 0
		.action
			font-size 14px
.isotipo
		width 122px
.logo 
	display none
	padding 1.3em 0
	overflow hidden
	background white
.avatar
	width 38px
	height 38px
.username
	margin-left 0.5em
	color gris_claro
	position relative
	top 10px
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 7px solid gris_claro
		content ""
		display inline-block
		margin-left 0.4em

@media screen and (min-width 480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width 1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.header
		height auto
		border none
		.title
			display none
	.logo
	.playlist
		display block
	.music
		width 32.5em
		float left
		.description
			display none
	.playing
		padding-top 1.2em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				padding 1em
				text-transform uppercase
				cursor pointer
				display block
				border-top 5px solid transparent
				&:hover
					border-top solid 5px gris_claro








